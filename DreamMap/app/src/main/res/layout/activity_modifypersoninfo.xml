<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_top"
        android:orientation="horizontal" >

        <TextView
            android:text="修改信息"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="130dp"
            android:textSize="30dp"
            android:textColor="@color/colorWhite"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:id="@+id/userinfo" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_medium"
            android:orientation="horizontal" >

            <TextView
                android:text="用户名"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:textColor="@color/colorGray"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:id="@+id/usernametext" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/editUsernameText"
                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_medium"
            android:orientation="horizontal" >

            <TextView
                android:text="性别"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:textColor="@color/colorGray"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:id="@+id/sextext" />

            <RadioButton
                android:text="男"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:id="@+id/radioButtonMale"
                android:layout_weight="1" />

            <RadioButton
                android:text="女"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:id="@+id/radioButtonFemale"
                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_medium"
            android:orientation="horizontal" >

            <TextView
                android:text="生日"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:textColor="@color/colorGray"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:id="@+id/birthdaytext" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/editBirthdayText"
                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_medium"
            android:orientation="horizontal" >

            <TextView
                android:text="地区"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:textColor="@color/colorGray"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:id="@+id/areatext" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/editAreaText"
                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/back_medium2"
            android:orientation="horizontal"
            android:layout_weight="0.60">

            <TextView
                android:text="描述"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:textColor="@color/colorGray"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:id="@+id/descriptiontext" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/editDescriptionText"
                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:weightSum="1">

            <TextView
                android:text="修改密码？"
                android:textSize="15dp"
                android:textColor="@color/colorText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="300dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:weightSum="1">

            <Button
                android:text="保存"
                android:background="@drawable/back_btnback"
                android:layout_width="219dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="70dp"
                android:textSize="25dp"
                android:textColor="@color/colorWhite"
                android:id="@+id/modify"
                android:layout_weight="0.29" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
