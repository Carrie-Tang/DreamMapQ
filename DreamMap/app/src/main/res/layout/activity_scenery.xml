<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_top"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <TextView
            android:text="鸣沙山"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="130dp"
            android:textSize="30dp"
            android:textColor="@color/colorWhite"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:id="@+id/recommend" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="383dp"
        android:layout_above="@id/tab_menu"
        android:background="@color/colorTransparent"
        android:layout_weight="1"
        android:layout_below="@+id/linearLayout"
        android:orientation="vertical"
        android:weightSum="1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="254dp"
            android:src="@drawable/example"
            android:id="@+id/sceneryImg" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="25sp"

            android:layout_gravity="center_vertical"
            android:textColor="@color/colorText"
            android:text="鸣沙山    "
            android:id="@+id/sceneryName" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="25sp"

            android:layout_gravity="center_vertical"
            android:textColor="@color/colorText"
            android:text="简介：沙漠或者沙丘中，由于各种气候和地理因素的影响，造成以石英为主的细沙粒，因风吹震动，沙滑落或相互运动，众多沙粒在气流中旋转，表面空洞造成“空竹”效应发生嗡嗡响声的地方称为鸣沙地。在中国西部地区鸣沙地主要是沙漠，这些沙丘堆成山状，因此又称为鸣沙山。"
            android:id="@+id/sceneryDesc"
            android:layout_weight="7.50" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/txt_deal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_background"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_mainpage"
            android:gravity="center"
            android:textColor="@drawable/tab_mainpage_text"
            android:text="主页"/>

        <TextView
            android:id="@+id/txt_poi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_background"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_place"
            android:gravity="center"
            android:textColor="@drawable/tab_place_text"
            android:text="景点"/>

        <TextView
            android:id="@+id/txt_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_background"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_user"
            android:gravity="center"
            android:textColor="@drawable/tab_user_text"
            android:text="用户"/>

    </LinearLayout>

    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/colorGray"
        android:layout_above="@id/tab_menu"/>


</LinearLayout>