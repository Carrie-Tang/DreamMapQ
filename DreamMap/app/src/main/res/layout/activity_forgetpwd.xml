<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="85dp"
            app:srcCompat="@drawable/btn_icon"
            android:id="@+id/imageView" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_medium"
            android:orientation="horizontal" >

            <TextView
                android:text="手机号"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:textColor="@color/colorGray"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:id="@+id/Fphone" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType="textPersonName"
                android:text="请输入11位手机号"
                android:ems="10"
                android:id="@+id/txt_phonenumber"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_medium"
            android:orientation="horizontal" >

            <TextView
                android:text="验证码"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:textColor="@color/colorGray"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:id="@+id/Fverify" />


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType="textPersonName"
                android:text="请输入验证码"
                android:ems="10"
                android:id="@+id/txt_verify"
                android:layout_weight="1" />

            <Button
                android:text="发送验证码"
                android:textColor="@color/colorWhite"
                android:background="@drawable/back_btnverify"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_sendverify" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_medium"
            android:orientation="horizontal" >

            <TextView
                android:text="设置新密码"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:textColor="@color/colorGray"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:id="@+id/Fpassword" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType="textPersonName"
                android:text="请设置登录密码"
                android:ems="10"
                android:id="@+id/txt_password"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_medium"
            android:orientation="horizontal" >

            <TextView
                android:text="确认新密码"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:textColor="@color/colorGray"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:id="@+id/FSpassword" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType="textPersonName"
                android:text="请确认登录密码"
                android:ems="10"
                android:id="@+id/txt_spassword"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:weightSum="1">

            <Button
                android:text="确定"
                android:background="@drawable/back_btnback"
                android:layout_width="219dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="70dp"
                android:textSize="25dp"
                android:textColor="@color/colorWhite"
                android:id="@+id/btn_modify"
                android:layout_weight="0.29" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

